<!DOCTYPE html>
<html>
    <head>
        <title>Tris' Field Leaderboards</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    </head>
    <body>

        <nav class="navbar navbar-expand-lg bg-light m-3 align-content-start">
            <div class="navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">EU</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/eu/open">Open Division</a></li>
                            <li><a class="dropdown-item" href="/eu/closed">Closed Division</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">NA</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/na/open">Open Division</a></li>
                            <li><a class="dropdown-item" href="/na/closed">Closed Division</a></li>
                        </ul>
                    </li>

        
                </ul>
            </div>
        </nav>

        <h1 class="fs-2 mt-3 text-center">
            <%= title %>
        </h1>

        


        

        

        <div class="m-5">
            <table class="table table-striped table-hover table-bordered ">
                <thead class="fw-semibold">
                    <td>#</td>
                    <td>Team</td>
                    <td>Rating</td>
                    <td>Games Played</td>
                </thead>
                <tbody>
                    <% teams.forEach((team, index)=> { %>
                        <tr>
                            <td>
                                <%= index+1 %>
                            </td>
                            <td>
                                <%= team.name %>
                            </td>
                            <td>
                                <%= team.rating %>
                            </td>
                            <td>
                                <%= team.gamesPlayed %>
                            </td>
                        </tr>
            
                        <% }) %>
                </tbody>
            
            </table>
        </div>

    </body>
</html>