<%- include('header') -%>

        <h1 class="fs-2 mt-3 text-center">
            <%= title %>
        </h1>

        <div class="m-5">
            <table class="table table-striped table-hover table-bordered ">
                <thead class="fw-semibold">
                    <td>#</td>
                    <td>Team</td>
                    <td>Rating</td>
                    <td>Games Played</td>
                </thead>
                <tbody>
                    <% teams.forEach((team, index)=> { %>
                        
                        <tr>
                            <td>
                                <%= index+1 %>
                            </td>
                            <td>
                                <a href="<%= base_team_url %>/<%= team.id %>">
                                    <%= team.name %>
                                </a>  
                            </td>
                            <td>
                                <%= team.rating %>
                            </td>
                            <td>
                                <%= team.gamesPlayed %>
                            </td>
                        </tr>
                      

            
                        <% }) %>
                </tbody>
            
            </table>
        </div>

<%- include('footer') -%>